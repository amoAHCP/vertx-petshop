<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<GridPane fx:id="rootPane" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          style="-fx-background-color: gray;">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="0"
              GridPane.rowIndex="0">
            <children>
                <HBox prefHeight="100.0" prefWidth="100.0">
                    <children>
                        <Label text="Amount:">
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="amountLabel" text="Label"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="100.0">
                    <children>
                        <Label text="Price:">
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="priceLabel" text="1"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
        <ImageView fx:id="productImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1"
                   GridPane.rowIndex="0">
            <image>
                <Image url="@../images/products/box1.png"/>
            </image>
        </ImageView>
        <VBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.columnSpan="2"
              GridPane.rowIndex="1">
            <children>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label text="Name:">
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="nameLabel" text="Label"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label text="Description:">
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="descriptionLabel" text="1"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</GridPane>
